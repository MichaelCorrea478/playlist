{% extends "layout.njk" %}

{% block pagina %}

<h1>Alteração de músicas</h1>

<div class="col-md-6">
    <form action="/edit/{{ musica.id }}" method="post">
        <input type="hidden" name="_method" value="PUT" />
        <div class="form-group mb-3">
            <label for="nome"><strong>Id</strong></label>
            <p class="form-control" id="id">1</p>
        </div>
        <div class="form-group mb-3">
            <label for="nome"><strong>Nome da música</strong></label>
            <input type="text" class="form-control" name="nome" id="nome" placeholder="Nome" value="{{ musica.nome }}" />
        </div>
        <div class="form-group mb-3">
            <label for="artista"><strong>Nome do artista</strong></label>
            <input type="text" class="form-control" name="artista" id="artista" placeholder="Artista" value="{{ musica.artista }}" />
        </div>
        <div class="form-group mb-3">
            <label for="estrelas"><strong>Total de estrelas</strong></label>
            <input type="text" class="form-control" name="estrelas" id="estrelas" placeholder="Estrelas" value="{{ musica.estrelas }}" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Alterar Música</button>
            <a href="/" class="btn btn-secondary">Voltar</a>
        </div>
    </form>
</div>

{% endblock %}