{% extends "layout.njk" %}

{% block pagina %}

<h1>Cadastro de músicas</h1>

<div class="col-md-6">
    <form action="/" method="post">
        <div class="form-group mb-3">
            <label for="nome"><strong>Nome da música</strong></label>
            <input type="text" class="form-control" name="nome" id="nome" placeholder="Nome" />
        </div>
        <div class="form-group mb-3">
            <label for="artista"><strong>Nome do artista</strong></label>
            <input type="text" class="form-control" name="artista" id="artista" placeholder="Artista" />
        </div>
        <div class="form-group mb-3">
            <label for="estrelas"><strong>Total de estrelas</strong></label>
            <input type="text" class="form-control" name="estrelas" id="estrelas" placeholder="Estrelas" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Cadastrar Música</button>
            <a href="/" class="btn btn-secondary">Voltar</a>
        </div>
    </form>
</div>

{% endblock %}